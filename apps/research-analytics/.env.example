# FRAMES Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
# For SQLite (development only - NOT recommended for production):
# DATABASE_URL=sqlite:///instance/frames.db

# For PostgreSQL (RECOMMENDED):
# Azure Database for PostgreSQL (Free tier - 750 hours/month):
DATABASE_URL=postgresql://framesadmin:YOUR_PASSWORD@YOUR_SERVER_NAME.postgres.database.azure.com:5432/frames?sslmode=require

# Local PostgreSQL (for testing):
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/frames

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Generate a new SECRET_KEY with:
# python -c "import secrets; print(secrets.token_hex(32))"

# Azure Configuration (Optional - for future deployment)
# AZURE_SUBSCRIPTION_ID=your-subscription-id
# AZURE_RESOURCE_GROUP=FRAMES-Resources

# Discord Integration (Phase 2)
# DISCORD_BOT_TOKEN=your-discord-bot-token
# DISCORD_GUILD_IDS=123456789,987654321

# GitHub Integration (Phase 3)
# GITHUB_ACCESS_TOKEN=your-github-personal-access-token
# GITHUB_REPOS=org/repo1,org/repo2

# Project Management Tool Integration (Phase 4)
# PM_TOOL_API_KEY=your-pm-tool-api-key
# PM_TOOL_BASE_URL=https://api.projecttool.com
