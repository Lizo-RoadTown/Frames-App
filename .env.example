# FRAMES Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
# For SQLite (development):
# DATABASE_URL=sqlite:///instance/frames.db

# For PostgreSQL (production):
# Local PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/frames

# Railway PostgreSQL (example):
# DATABASE_URL=postgresql://postgres:password@containers-us-west-123.railway.app:5432/railway

# Heroku PostgreSQL (automatically set by Heroku)
# DATABASE_URL will be set automatically

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Discord Integration (Phase 2)
# DISCORD_BOT_TOKEN=your-discord-bot-token
# DISCORD_GUILD_IDS=123456789,987654321

# GitHub Integration (Phase 3)
# GITHUB_ACCESS_TOKEN=your-github-personal-access-token
# GITHUB_REPOS=org/repo1,org/repo2

# Project Management Tool Integration (Phase 4)
# PM_TOOL_API_KEY=your-pm-tool-api-key
# PM_TOOL_BASE_URL=https://api.projecttool.com
